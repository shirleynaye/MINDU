<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
    android:id="@+id/rootInspira"
android:background="@color/aliceblue"
tools:context="ec.repositoriocompartido.MINDUApp.InspiracionActivity">

<!-- Imagen superior izquierda -->
<ImageView
    android:id="@+id/imgTopLeft"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:contentDescription="logo izquierda"
    android:src="@drawable/volver"
    android:scaleType="centerCrop"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

<!-- Imagen superior derecha -->
<ImageView
    android:id="@+id/imgTopRight"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:contentDescription="logo derecha"
    android:src="@drawable/avatar2"
    android:scaleType="centerCrop"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

<!-- Título centrado debajo de las imágenes -->
<TextView
    android:id="@+id/tvMiCuentax"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="¿Como te sientes hoy?"
    android:textSize="28sp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/imgTopLeft"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<!-- Scroll area para los 4 rectángulos -->
<androidx.core.widget.NestedScrollView
    android:id="@+id/scrollArea"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:fillViewport="true"
    app:layout_constraintTop_toBottomOf="@id/tvMiCuentax"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:gravity="center_horizontal">

        <!-- Item 1 -->
        <LinearLayout
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/item1_img"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/e1"
                android:scaleType="centerCrop"
                android:contentDescription="icono 1" />

            <TextView
                android:id="@+id/item1_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="Animado"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Item 2 -->
        <LinearLayout
            android:id="@+id/item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/item2_img"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/e2"
                android:scaleType="centerCrop"
                android:contentDescription="icono 2" />

            <TextView
                android:id="@+id/item2_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="Triste"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Item 3 -->
        <LinearLayout
            android:id="@+id/item3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/item3_img"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/e3"
                android:scaleType="centerCrop"
                android:contentDescription="icono 3" />

            <TextView
                android:id="@+id/item3_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="Enojado"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Item 4 -->
        <LinearLayout
            android:id="@+id/item4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/item4_img"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/e4"
                android:scaleType="centerCrop"
                android:contentDescription="icono 4" />

            <TextView
                android:id="@+id/item4_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="Estresado"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Item 4 -->
        <LinearLayout
            android:id="@+id/item5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/item5_img"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/e5"
                android:scaleType="centerCrop"
                android:contentDescription="icono 4" />

            <TextView
                android:id="@+id/item5_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="Ansioso"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
