<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootNota"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context="ec.repositoriocompartido.MINDUApp.NotaActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollNota"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="24dp">

            <LinearLayout
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:backgroundTint="@color/aliceblue"
                android:background="@drawable/rounded_background">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/card1_row1_imageLeft"
                        android:layout_width="44dp"
                        android:layout_height="44dp"

                        android:src="@drawable/volver"
                        android:contentDescription="img derecha"
                        android:scaleType="centerCrop" />
                    <TextView
                        android:id="@+id/card1_row1_textLeft"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:text="Nombre"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/card1_row1_imageRight"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/avatar1"
                        android:contentDescription="img derecha"
                        android:scaleType="centerCrop" />
                </LinearLayout>

                <!-- fila2: texto izquierda + texto derecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="28dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/card1_row2_textLeft"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Anotaciones"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/card1_row2_textRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Palabras"
                        android:textSize="14sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- fila3: texto izquierda + texto derecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/card1_row3_textLeft"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3"
                        android:textSize="14sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/card1_row3_textRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90"
                        android:textSize="14sp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />


            <LinearLayout
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/card2_textLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hoy 6 de Julio"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/card2_textRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver todas-->"
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />


            <!-- reemplazar: card3 + separador + card4 -->
            <LinearLayout
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:backgroundTint="@color/pink"
                android:background="@drawable/rounded_background"
                android:gravity="center_vertical">

                <!-- fila superior: imagen a la izquierda y texto a la derecha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/card3_imageLeft"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/sol"
                        android:scaleType="centerCrop"
                        android:contentDescription="img izquierda" />

                    <TextView
                        android:id="@+id/card3_textRight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Reflexión del día"
                        android:textSize="15sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- espacio entre la fila y el rectángulo interior -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <!-- rectángulo INTERIOR (ahora DENTRO de card3) -->
                <LinearLayout
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/rounded_background">

                <EditText
                    android:id="@+id/card4_input"
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:hint="Ingresa como te sientes"
                    android:padding="8dp"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>
        </LinearLayout>


        <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />





            <!-- Card con título y párrafo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:background="@drawable/paragraph_card"
                android:elevation="4dp"

                android:padding="12dp">

                <!-- Título del párrafo -->
                <TextView
                    android:id="@+id/tvParagraphTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ultima reflexión"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="6dp"
                    android:includeFontPadding="false" />

                <!-- Párrafo multi-línea (contenido) -->
                <TextView
                    android:id="@+id/tvParagraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aquí va tu párrafo profesional.ajustará al ancho disponible gracias a los márgenes. Usa un lenguaje claro, organizado en oraciones breves para facilitar la lectura."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="14dp"
                    android:textAlignment="viewStart"
                    android:includeFontPadding="false"
                    android:breakStrategy="balanced"
                    android:justificationMode="inter_word" />
            </LinearLayout>


            <ImageView
                android:id="@+id/finalCenteredImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/mas"
                android:layout_marginTop="13dp"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen final centrada" />


            <View android:layout_width="match_parent" android:layout_height="24dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
